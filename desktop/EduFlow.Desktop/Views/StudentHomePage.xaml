<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduFlow.Desktop.Views.StudentHomePage"
             Title="Student">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Student Home" FontSize="22" FontAttributes="Bold"/>
        <Label x:Name="InfoLabel" Text="Loading..." />
        <Button Text="My Assignments" Clicked="OnOpenAssignments"/>
        <Button Text="Logout" Clicked="OnLogout"/>
        <Label x:Name="ErrorLabel" TextColor="Red"/>
    </VerticalStackLayout>
</ContentPage>