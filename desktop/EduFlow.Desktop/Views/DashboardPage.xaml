<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduFlow.Desktop.Views.DashboardPage"
             Title="Dashboard">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Dashboard" FontSize="22" FontAttributes="Bold"/>
        <Label x:Name="InfoLabel" Text="Loading..." />
        <Button Text="Logout" Clicked="OnLogout"/>
    </VerticalStackLayout>
</ContentPage>