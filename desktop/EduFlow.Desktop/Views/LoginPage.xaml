<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduFlow.Desktop.Views.LoginPage"
             x:Name="ThisPage"
             Title="Login">

    <VerticalStackLayout Padding="24" Spacing="12">

        <Label x:Name="RoleLabel"
               Text="Login"
               FontSize="22"
               FontAttributes="Bold" />

        <!-- Student: Login/Register toggle -->
        <HorizontalStackLayout x:Name="StudentModeRow"
                               Spacing="12"
                               IsVisible="False">
            <Button Text="Login" Clicked="OnStudentLoginMode"/>
            <Button Text="Register" Clicked="OnStudentRegisterMode"/>
        </HorizontalStackLayout>

        <Entry x:Name="EmailEntry"
               Placeholder="Email"
               Keyboard="Email"/>

        <Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"/>

        <!-- Student register only -->
        <Entry x:Name="InviteCodeEntry"
               Placeholder="Invite code"
               IsVisible="False"/>

        <Entry x:Name="GradeLevelEntry"
               Placeholder="Grade level"
               Keyboard="Numeric"
               IsVisible="False"/>

        <Button x:Name="SubmitButton"
                Text="Continue"
                Clicked="OnLogin"/>

        <!-- Loading -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           IsRunning="False"
                           IsVisible="False"
                           HorizontalOptions="Center"/>

        <Label x:Name="ErrorLabel"
               TextColor="Red"/>

    </VerticalStackLayout>
</ContentPage>